{
  "name": "dashboard",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "dev": {
      "executor": "nx:run-script",
      "options": {
        "script": "dev-build"
      },
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "exit 0"
      },
      "dependsOn": [
        "vitest"
      ]
    },
    "vitest": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn exec vitest --ui",
        "cwd": "./dashboard/"
      },
      "configurations": {
        "ci": {
          "command": "yarn exec vitest --run"
        }
      }
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo noop, build runs type-checking automatically"
      }
    },
    "cypress": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn exec cypress open --component",
        "cwd": "./dashboard/"
      },
      "configurations": {
        "ci": {
          "command": "yarn exec cypress run --component"
        }
      }
    }
  }
}
